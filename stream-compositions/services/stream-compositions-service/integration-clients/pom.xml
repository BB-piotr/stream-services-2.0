<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>compositions-service</artifactId>
        <groupId>com.backbase.stream.compositions</groupId>
        <version>3.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>integration-clients</artifactId>
    <packaging>jar</packaging>

    <name>Compositions :: Integration Clients</name>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.backbase.buildingblocks</groupId>
                <version>13.4.0</version>
                <artifactId>service-sdk-starter-core</artifactId>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <!-- Spring Boot dependencies -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot</artifactId>
            <scope>compile</scope>
        </dependency>

        <!-- Stream dependencies -->
        <dependency>
            <groupId>com.backbase.stream</groupId>
            <artifactId>stream-dbs-web-client</artifactId>
            <version>3.0.0-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>

            <!-- Unpack OpenAPI specs from zip dependencies -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.backbase.stream.compositions</groupId>
                                    <artifactId>legal-entity-integration-api</artifactId>
                                    <version>3.0.0-SNAPSHOT</version>
                                    <classifier>api</classifier>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/yaml</outputDirectory>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.backbase.stream.compositions</groupId>
                                    <artifactId>product-integration-api</artifactId>
                                    <version>3.0.0-SNAPSHOT</version>
                                    <classifier>api</classifier>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/yaml</outputDirectory>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.backbase.stream.compositions</groupId>
                                    <artifactId>transaction-integration-api</artifactId>
                                    <version>3.0.0-SNAPSHOT</version>
                                    <classifier>api</classifier>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/yaml</outputDirectory>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                            </artifactItems>
                            <includes>**/*.yaml, **/*.json</includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Generate models and clients from unpacked OpenAPI specs -->
            <plugin>
                <groupId>com.backbase.oss</groupId>
                <artifactId>boat-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-legale-entity-integration-api-code</id>
                        <goals>
                            <goal>generate-webclient-embedded</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <inputSpec>${project.build.directory}/yaml/legal-entity-integration-api/service-api-v1.0.0.yaml</inputSpec>
                            <apiPackage>com.backbase.compositions.integration.legalentity.api.service.v1</apiPackage>
                            <modelPackage>com.backbase.compositions.integration.legalentity.api.service.v1.model</modelPackage>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-product-integration-api-code</id>
                        <goals>
                            <goal>generate-webclient-embedded</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <inputSpec>${project.build.directory}/yaml/product-integration-api/service-api-v1.0.0.yaml</inputSpec>
                            <apiPackage>com.backbase.compositions.integration.product.api.service.v1</apiPackage>
                            <modelPackage>com.backbase.compositions.integration.product.api.service.v1.model</modelPackage>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-transaction-integration-api-code</id>
                        <goals>
                            <goal>generate-webclient-embedded</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <inputSpec>${project.build.directory}/yaml/transaction-integration-api/service-api-v1.0.0.yaml</inputSpec>
                            <apiPackage>com.backbase.compositions.integration.transaction.api.service.v1</apiPackage>
                            <modelPackage>com.backbase.compositions.integration.transaction.api.service.v1.model</modelPackage>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
            </plugin>

        </plugins>
    </build>

</project>
