<custom-interceptors>
    <custom-interceptor>
 		<interceptor-class-name>com.singularity.JMSEntryMarkerInterceptor</interceptor-class-name>
 			<match-class type="matches-class">
  				<name filter-type="equals">org.springframework.jms.listener.DefaultMessageListenerContainer$AsyncMessageListenerInvoker</name>
 			</match-class>
 			<match-method>
  				<name>run</name>
 			</match-method>
	</custom-interceptor>
</custom-interceptors>